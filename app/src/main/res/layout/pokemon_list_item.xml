<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="70dp"
    android:padding="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scaleType="fitCenter"
        android:id="@+id/pokemonImage"
        android:contentDescription="@string/pokemon_image_description"
        android:adjustViewBounds="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pokemonName"
        android:layout_toRightOf="@+id/pokemonImage"
        android:layout_toEndOf="@+id/pokemonImage"
        android:textSize="@dimen/pokemonNameListItemSize"
        android:layout_alignBottom="@+id/pokemonImage"
        android:gravity="center_vertical"
        android:text="test"
        android:paddingLeft="15dp" />
</RelativeLayout>